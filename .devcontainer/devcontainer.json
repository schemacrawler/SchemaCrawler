{
  "name": "SchemaCrawler",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "INSTALL_MAVEN": "true",
      "INSTALL_GRADLE": "true",
      "NODE_VERSION": "none"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "vscjava.vscode-java-test",
        "editorconfig.editorconfig"
      ]
    }
  },
  "postCreateCommand": "mvn clean install"
}